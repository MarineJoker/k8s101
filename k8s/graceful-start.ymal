apiVersion: v1
kind: Pod
metadata:
  name: httpserver-probe
spec:
  hostNetwork: true
  containers:
    - name: http-probe
      image: httpserver:v6
      readinessProbe:
        httpGet:
          ### this probe will fail with 404 error code
          ### only httpcode between 200-400 is retreated as success
          path: /localhost/healthz 
          port: 8080
        initialDelaySeconds: 30
        periodSeconds: 5
        successThreshold: 2
